{
  "version": 2,
  "name": "the-raymon-app",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://the-raymon-app-backend.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://the-raymon-app-backend.railway.app/api"
  },
  "functions": {
    "frontend/src/**/*.js": {
      "includeFiles": "frontend/build/**"
    }
  }
}
