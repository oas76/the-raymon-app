# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/golf-auth-service

# JWT
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# OAuth Credentials - Google
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth Credentials - Facebook
# Get these from: https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# OAuth Credentials - Vipps (Future implementation)
VIPPS_CLIENT_ID=your_vipps_client_id
VIPPS_CLIENT_SECRET=your_vipps_client_secret

# Session Secret
SESSION_SECRET=your_session_secret_key_here_change_in_production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
